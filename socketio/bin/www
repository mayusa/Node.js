#!/usr/bin/env node
var debug = require('debug')('socketio');
var app = require('../app');

app.set('port', process.env.PORT || 3000);
// define local ip (not localhost)
app.set('ipaddress', '10.0.0.18');
var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

// socket.io
var io = require('socket.io');
var chatRoom = io.listen(server);
chatRoom.sockets.on('connection', function (socket) {

	socket.emit('entrance', {message: 'Welcome to the chat room~!'});

	socket.on('disconnect', function () {
		chatRoom.sockets.emit('exit', {message: 'A chatter has disconnected.'});
	});

	socket.on('chat message', function (data) {
		chatRoom.sockets.emit('chat message', {message: '# ' + data.message});
	});

	chatRoom.sockets.emit('entrance', {message: 'A new chatter is online~ .'});

});